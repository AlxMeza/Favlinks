<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="my-3">
                            <input type="text" value="{{link.title}}" class="form-control" placeholder="Title" name="title" autofocus required>
                        </div>
                        <div class="mb-3">
                            <input type="url" value="{{link.url}}" class="form-control" placeholder="URL" name="url" required>
                        </div>
                        <div class="mb-3">
                            <textarea name="description" rows="2" class="form-control" placeholder="Description">{{link.description}}</textarea>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success form-control">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>